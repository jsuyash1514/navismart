<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/marina_booking_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="20dp"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="2dp"
    card_view:cardBackgroundColor="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/marina_booking_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="20dp" />

        <TextView
            android:id="@+id/guest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/marina_booking_image"
            android:padding="2dp"
            android:textColor="#444444"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/guest_arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/guest_name"
            android:layout_toEndOf="@id/marina_booking_image"
            android:paddingStart="2dp"
            android:text="@string/arriving"
            android:textColor="#737373"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/guest_arriving_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/guest_name"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/guest_arrival"
            android:textColor="#737373"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/guest_departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/guest_arrival"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/marina_booking_image"
            android:paddingStart="2dp"
            android:text="@string/departing"
            android:textColor="#737373"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/guest_departing_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/guest_arrival"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/guest_departure"
            android:textColor="#737373"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_forum_black_24dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>






